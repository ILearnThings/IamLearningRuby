<h1>Products</h1>
<div> <%= link_to 'HİZMET / ÜRÜN EKLE', new_company_product_path(@company), :class => "btn btn-default" %> </div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ADI</th>
            <th>STOK MİKTARI</th>
            <th>ALIŞ FİYATI (VERGİLER HARİÇ)</th>
            <th>SATIŞ FİYATI (VERGİLER HARİÇ)</th>
        </tr>
    </thead>
    <tbody>
		<% if @products.each do |product| %>
			<%= render partial: 'product', :object => product %>
		<% end.empty? %>
			<span> KAYITLI HİZMET / ÜRÜN YOK </span>
		<% end %>
	</tbody>
</table>