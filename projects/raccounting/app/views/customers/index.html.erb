<h1>Müşteriler</h1>
<div> <%= link_to 'YENİ MÜŞTERİ OLUŞTUR', new_company_customer_path(@company), :class => "btn btn-default" %> </div>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>ÜNVANI</th>
			<th>KISA İSİM</th>
		</tr>
	</thead>
<tbody>
	<% @customers.each do |customer| %>
		<tr>
			<td><%= link_to customer.company_title, company_customer_path(@company, customer) %></td>
			<td><%= customer.short_name %></td>
		</tr>
	<% end %>
</tbody>
</table>