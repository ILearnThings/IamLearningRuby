<div class="container col-lg-5">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<fieldset>
			<legend>Raccounting'e hoş geldiniz, e-posta ve parolanız ile güvenli giriş yapabilirsiniz.</legend>
			<div class="form-group">
				<%= f.label :email, :class => "col-lg-2 control-label" %>
				<div class="col-lg-10">
					<%= f.email_field :email, :class => "form-control", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password, :class => "col-lg-2 control-label" %>
				<div class="col-lg-10">
					<%= f.password_field :password,  :class => "form-control",autocomplete: "off" %>
				</div>
			</div>
			
			<% if devise_mapping.rememberable? -%>
			<div class="form-group"> 
				<div class="checkbox pull-right">
					<label for="user_remember_me">
					<%= f.check_box :remember_me%> Remember me
					<label>
				</div>
			</div>    
			<% end -%>

			<div class="form-group">  
				<div class="col-lg-10 col-lg-offset-2">
				<%= f.submit "OTURUM AÇ", :class => "btn btn-default" %>
				</div>
			</div>
			<div class="form-group">  
				<div class="col-lg-10 col-lg-offset-2" style="font-size: 26px;">
					<p>
						<span>Email: demo@demo.com</span>
						<br />
						<span>Parola: demopass</span>
					</p>
				</div>
			</div>
		</fieldset>

	<% end %>
</div>